<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerStoreListViewActivity">

    <ListView
        android:id="@+id/listStores"
        android:layout_width="368dp"
        android:layout_height="466dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <TextView
        android:id="@+id/text_store"
        android:layout_width="174dp"
        android:layout_height="74dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/store"
        android:textColor="#03A9F4"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/listStores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482" />

    <Button
        android:id="@+id/button_view_order"
        android:layout_width="241dp"
        android:layout_height="64dp"
        android:fontFamily="@font/coiny"
        android:text="@string/view_order"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listStores" />
</androidx.constraintlayout.widget.ConstraintLayout>




